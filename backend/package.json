{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend for Seminar Hall Booking System",
  "main": "dist/app.js",
  "scripts": {
    "start": "node dist/app.js",
    "start:dev": "node start.js",
    "dev": "nodemon src/app.ts",
    "build": "tsc",
    "type-check": "tsc --noEmit",
    "test": "jest --passWithNoTests",
    "test:ci": "jest --ci --watchAll=false --passWithNoTests",
    "test:integration": "jest --testPathPattern=integration --ci --coverage=false --passWithNoTests",
    "ci": "npm run type-check && npm run lint && npm run test:ci && npm run build",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write \"src/**/*.{js,ts,json}\"",
    "format:check": "prettier --check \"src/**/*.{js,ts,json}\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^6.4.17",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.0.3",
    "morgan": "^1.10.0",
    "node-cron": "^4.0.7",
    "nodemailer": "^7.0.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.15.11",
    "eslint": "^9.28.0",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.2.0",
    "jest": "^29.7.0",
    "nodemon": "^2.0.22",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.3",
    "typescript-eslint": "^8.33.0"
  }
}
